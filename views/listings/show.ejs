<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-3">

 
  <!-- <body> -->
    <h3>Listings Details :</h3>
     </div>
    <div class="card listing-card col-6 offset-3">
  <p>Owner: <%= listings.owner.username %> (<%= listings.owner.email %>)</p>
        <img src="<%= listings.image.url %>"class="card-img-top show-img" alt="listing_image">
        <div class="card-body show-card">
          <p class="card-text">
            <b><li><%= listings.title %></li></b>
            <b><li class="bbb"><%= listings.description %></li></b>
            <b><li>&#8377; <%=( listings.price||0).toLocaleString("en-IN") %></li></b>
            <b><li><%= listings.location %></li></b>
            <b><li> COUNTRY-<%= listings.country %></li></b>
          </p>
      </div>
    </div>
    <%if( curruser&&curruser._id.equals(listings.owner._id) ){%>
   <div class="btns">

 
    <a href="/listing/<%= listings._id %>/edit" class=" btn btn-dark col-1 offset-3">Edit</a>
  
    <form method="POST" action="/listing/<%=listings._id%>?_method=DELETE">
      <button class="btn btn-dark  offset-5">Delete</button>
    </form>
      </div>
    <% } %>
  <!-- </body> -->
   <br>
<div class="col-10 offset-3 mb-3">
<h3>leave the review</h3>
<% if(curruser) {%>
<form action="/listing/<%= listings._id %>/reviews" method="POST"  novalidate  class="needs-validation"  >
  <div class=" mb-3 mt-3">
<label for="name" class="form-lable"> NAME :</label>
<input type="text" name="review[name]" id="name"  placeholder="please enter your name " required>
<div class="valid-feedback">
  looks good
</div>
<div class="invalid-feedback"> please enter your name</div>
  <div class="mb-3 mt-3">
    
  <label for="rating" class="form-label">Rating</label>
  
   <!-- <input type="range"min ="1"  max="5"class="form-range"   name="review[rating]" id="rating" required > -->
  <div class="review-star-rating">
    <% for(let i = 5; i >= 1; i--) { %>
      <input type="radio" name="review[rating]" id="review-star<%= i %>" value="<%= i %>" required>
      <label for="review-star<%= i %>"><i class="fa fa-star"></i></label>
    <% } %>
  </div>
</div>  


<div class="mb-3 mt-3">
  <label for="comment">comment</label>
  <textarea name="review[comment]" id="comment" cols="20" rows="5"
  class="form-control"
  required ></textarea>
  <div class="valid-feedback">
    looks good
  </div>
  <div class="invalid-feedback">
    please add some feedback
  </div>
  <br>
  <button class="btn btn-outline-dark">submit</button>
</div>
</form>
<hr>
<% } %>
<h4>Reviews</h4>

<div class="row review-container">
  <% if (listings.reviews.length > 0) { %>
    <% for (review of listings.reviews) { %>
      <div class="col-md-6 mb-3">
        <div class="card review h-100"> <!-- Added the review class here -->
          <div class="card-body d-flex flex-column">

            <h9 class="card-title"><%= review.author.username%></h9>
            <h5 class="card-title"><%= review.name%></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= review.createdAt.toDateString() %></h6>
            
            <!-- Comment with read more functionality -->
            <div class="comment-container">
              <p class="card-text comment-text"><%= review.comment %></p>
              <% if (review.comment && review.comment.length > 100) { %>
                <a href="#" class="read-more-btn">Read more</a>
              <% } %>
            </div>
            
            <p class="card-text star-rating"> 
              <% for(let i = 0; i < review.rating; i++) { %>
                <i class="text-warning">★</i>
              <% } %>
              <% for(let i = review.rating; i < 5; i++) { %>
                <i class="text-secondary">☆</i>
              <% } %>
            </p>
            <% if (curruser) {%>
            <form action="/listing/<%= listings._id%>/reviews/<%= review._id %>?_method=DELETE " method="post" class="mt-auto">
              <button class="btn btn-sm btn-dark">Delete</button>
            </form>
           <% } %>
          </div>
        </div>
      </div>
    <% } %>
  <% } else { %>
    <p>No reviews yet. Be the first to leave a review!</p>
  <% } %>

</div>

</div>
</div>
</div>
